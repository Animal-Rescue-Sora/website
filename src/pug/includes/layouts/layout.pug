block vars

doctype html
html(lang="ja" itemscope itemtype="https://schema.org/WebPage" class="no-js")
  head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#")
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover")
    meta(name="SKYPE_TOOLBAR" content="SKYPE_TOOLBAR_PARSER_COMPATIBLE")
    meta(name="format-detection" content="telephone=no")

    title #{title}
    meta(property="og:title" content=title)

    script(type="module")
      | document.documentElement.classList.remove('no-js');
      | document.documentElement.classList.add('js');

    link(href="https://animal-rescue-sora.netlify.app/" rel="dns-prefetch")
    link(href="https://animal-rescue-sora.netlify.app/" rel="preconnect")

    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)

    link(href="/common/js/bundle.min.js" rel="prefetch")
    link(href="/common/js/bundle.min.js" rel="preload" as="script" crossorigin)
    link(href="/common/css/style.min.css" rel="prefetch")
    link(href="/common/css/style.min.css" rel="preload" as="style" crossorigin)

    block meta

    style.
      [v-cloak] { display: none; }
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;700&display=swap")
    link(rel="stylesheet" href="/common/css/style.min.css" crossorigin)
    meta(name="description" content=description)
    meta(property="og:description" content=description)

    meta(property="og:image" content=ogpimage)
    meta(property="og:image:alt" content=title)

    meta(property="og:locale" content="ja")
    meta(property="og:type" content=type)
    meta(name="twitter:dnt" content="on")
    meta(name="twitter:card" content="summary_large_image")

    meta(property="og:url" content=url)
    link(rel="canonical" href=url)

    link(rel="icon" href="/common/img/icons/favicon.ico" sizes="any")
    link(rel="icon" href="/common/img/icons/favicon.svg" type="image/svg+xml")
    link(rel="apple-touch-icon" href="/common/img/icons/apple-touch-icon.png")
    link(rel="manifest" href="/manifest.webmanifest" crossorigin="use-credentials")
    meta(name="theme-color" content="#fafafa" media="(prefers-color-scheme: light)")
    meta(name="theme-color" content="#333e48" media="(prefers-color-scheme: dark)")

    block metameta

  body(role="document")
    div(id="app")
      page(v-cloak)
        template(#site-header)
          site-header
            global-navigation
              global-navigation-item(href="#about") 私たちについて
              global-navigation-item(href="#waiting") 里親募集中
              global-navigation-item(href="#decision-to-foster-parent") 里親確定
              global-navigation-item(href="#news") お知らせ
              global-navigation-item(href="#faq") よくあるご質問
              global-navigation-item(href="#application-guidelines" :hidden="true") 募集要項
              global-navigation-item(href="#support-request") ご支援のお願い
        template(#site-footer)
          site-footer
        template(#contact-bar)
          contact-bar(
            facebook="https://m.me/animalrescuesora"
            instagram="https://www.instagram.com/a.r_sora/"
            twitter="https://twitter.com/cocomiroku"
            telephone="08051650043"
          )
        block main
          //-
          //- ここにページ毎の layouts と components が insert される。
          //-

      structured-data
    script(src="https://polyfill.io/v3/polyfill.min.js?version=3.101.0&features=navigator.geolocation%252Ces2015%252Ces6%252CElement.prototype.remove%252CElement.prototype.closest%252CIntersectionObserver%252CIntersectionObserverEntry%252Csmoothscroll" integrity="sha512-Ehx7Y2Z2GMKoXzIwxfGkqTVrIbly7JApDzhGrBxIIUMk/UdsANAxTxhuxaDrokri9PZKMEHjXCQi8C0gcGy1Ug==" crossorigin)
    script(src="/common/js/bundle.min.js" type="module" crossorigin)
